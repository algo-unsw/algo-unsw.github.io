<div class="col">
  <a href="{% if person.redirect %}{{ person.redirect }}{% else %}{{ person.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if person.img %}
        {%
          include figure.liquid
          loading="eager"
          path=person.img
          sizes = "250px"
          alt="person thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ person.name }}</h2>
        <p class="card-text">{{ person.description }}</p>
      </div>
    </div>
  </a>
</div>
